<!DOCTYPE html>
<html lang="en">
<head>
	<link rel="stylesheet" href="css/project1.css">
	<meta charset="UTF-8">
	<meta name="author" content="Ram Reddy Baddam">
	<meta name="description" content="Ram Reddy Bio">
	<title>About Ram Reddy Baddam</title>
    <script>
        function Submit() {
            var formData = {
                name: document.getElementById('name').value,
                email: document.getElementById('email').value,
                address: document.getElementById('address').value.trim(),
                phone: document.getElementById('phone').value,
                comments: document.getElementById('comments').value.trim()
            };

            fetch('/submitFeedback', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify(formData)
            })
            .then(response => response.json())
            .then(data => {
                alert(data.message);
                if (data.message.includes("Thank you")) {
                    window.location.href = "/gift";
                }
            })
            .catch(error => console.error('Error:', error));

            return false;
        }
            </script>
                
	<div><nav>
		<a href="/">Main Page</a>
		<a href="/About">About</a>
		<a href="/Trips">Trips</a>
		<a href="/Contact">Contact</a>
		<a href="/Albums">My Album</a>
		<a href="/Schedule">Schedule</a>
		<a href="/Feedbackform">Feedback</a>
		<a href="/game">Game</a>
	  </nav></div>
</head>
<body>
    <div class="feedback wrapper" id="feedback">
        <h1>Feedback Form</h1>
            <div id="error_message"></div>
            <form id="myform" onsubmit="return Submit()" action="/gift">
                <div class="input_field">
                    <input type="text" placeholder="Name" id="name">
                </div>
                <div class="input_field">
                    <input type="text" placeholder="Address" id="address">
                </div>
                <div class="input_field">
                    <input type="number" placeholder="Age" id="age" min="1" max="101">
                </div>
                <div class="input_field">
                    <input type="text" placeholder="Phone" id="phone">
                </div>
                <div class="input_field">
                    <input type="email" placeholder="Email" id="email" >
                </div>
                <div class="input_field">
                    <textarea placeholder="Comments" id="comments"></textarea>
                </div>
                <h2> Complete feedback and Win Exciting Gifts</h2>
                <div class="btn">
                    <button type="submit" value="">Submit </button>
                </div>
            </form>
    </div>
</body>
</html>